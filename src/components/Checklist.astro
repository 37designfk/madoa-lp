        </div>
      </div>

      <!-- Progress indicator (dots) -->
      <div class="flex items-center justify-center gap-2 mb-6" id="checklist-progress">
        <span class="text-sm text-gray-500">選択状況:</span>
        <span class="w-3 h-3 rounded-full bg-gray-200 transition-colors" data-progress="glass-type"></span>
        <span class="w-3 h-3 rounded-full bg-gray-200 transition-colors" data-progress="break-type"></span>
        <span class="w-3 h-3 rounded-full bg-gray-200 transition-colors" data-progress="window-size"></span>
        <span class="w-3 h-3 rounded-full bg-gray-200 transition-colors" data-progress="urgency"></span>
