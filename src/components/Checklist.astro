</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const groups = ['glass-type', 'break-type', 'window-size', 'urgency'];
    const resultUrgentEl = document.getElementById('checklist-result-urgent');
    const resultNormalEl = document.getElementById('checklist-result-normal');
    const messageUrgentEl = document.getElementById('result-message-urgent');
    const messageNormalEl = document.getElementById('result-message-normal');
    const progressCountEl = document.getElementById('progress-count');
    const progressBarEl = document.getElementById('progress-bar');

    function updateSelection() {
      let selectedCount = 0;
      const values: Record<string, string> = {};

      groups.forEach((group) => {
        const checked = document.querySelector(`input[name="${group}"]:checked`) as HTMLInputElement | null;
        const progressDot = document.querySelector(`[data-progress="${group}"]`);

        if (checked) {
          selectedCount++;
          values[group] = checked.value;
          if (progressDot) {
            progressDot.classList.remove('bg-gray-200');
            progressDot.classList.add('bg-primary-500');
          }
        } else {
          if (progressDot) {
            progressDot.classList.remove('bg-primary-500');
            progressDot.classList.add('bg-gray-200');
          }
        }
      });

      if (progressCountEl) {
        progressCountEl.textContent = `${selectedCount} / 4`;
      }

      if (progressBarEl) {
        progressBarEl.style.width = `${(selectedCount / 4) * 100}%`;
      }

      // Update check icons
      document.querySelectorAll('.checklist-card').forEach((card) => {
        const input = card.querySelector('input[type="radio"]') as HTMLInputElement | null;
        const icon = card.querySelector('[data-check-icon]');
        const dot = card.querySelector('span.flex-shrink-0');
        if (input && icon && dot) {
          if (input.checked) {
            icon.classList.remove('hidden');
            dot.classList.remove('border-gray-300');
            dot.classList.add('border-primary-500', 'bg-primary-500');
          } else {
            icon.classList.add('hidden');
            dot.classList.add('border-gray-300');
            dot.classList.remove('border-primary-500', 'bg-primary-500');
          }
        }
      });

      if (selectedCount === 4) {
        const isUrgent = values['urgency'] === 'now' || values['break-type'] === 'broken';

        if (isUrgent) {
          if (messageUrgentEl) {
            messageUrgentEl.textContent = 'すぐにお電話ください！最短即日対応いたします。';
          }
          if (resultUrgentEl) {
            resultUrgentEl.classList.remove('hidden');
            resultUrgentEl.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
          }
          if (resultNormalEl) resultNormalEl.classList.add('hidden');
        } else {
          if (messageNormalEl) {
            messageNormalEl.textContent = 'まずはお気軽にご相談ください。最適なプランをご提案します。';
          }
          if (resultNormalEl) {
            resultNormalEl.classList.remove('hidden');
            resultNormalEl.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
          }
          if (resultUrgentEl) resultUrgentEl.classList.add('hidden');
        }
      } else {
        if (resultUrgentEl) resultUrgentEl.classList.add('hidden');
        if (resultNormalEl) resultNormalEl.classList.add('hidden');
      }
    }

    groups.forEach((group) => {
      const radios = document.querySelectorAll(`input[name="${group}"]`);
      radios.forEach((radio) => {
        radio.addEventListener('change', updateSelection);
      });
    });
  });
</script>
