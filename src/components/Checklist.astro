      <!-- Result area: urgent -->
      <div id="checklist-result-urgent" class="hidden">
        <div class="border-t-2 border-accent-400 pt-8">
          <div class="bg-gradient-to-br from-accent-500 to-accent-600 rounded-2xl p-6 md:p-8 text-center shadow-xl">
